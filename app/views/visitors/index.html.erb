
<div class="text-center">
  <%= link_to 'Create Gallery', attachments_path, class: 'btn btn-primary' %>
</div>
<hr>
<div class="row">
  <% @users.each do |user| %>
    <% if user.attachments.any? %>
      <div class="col-md-4 text-center mb-2">
        <div class="image-text">
          <%= image_tag(show_gallery_image(user)) %>
          <div class="centered">
            <strong>User Name: </strong>
            <%= user.username %>
            <hr>
            <%= link_to "Show Gallery" , gallery_path(user.attachments.ids), class: "btn-image" %>
          </div>
        </div>
      </div>
    <% end %>   
  <% end %>
</div>



